        days = request.args.get('days')

        if(mealNum and days):
            day = int(days)
            meal = int(mealNum)
            limit1 = int(days)*int(mealNum)
            # flash(limit1)
            limit = Limit(ds=day, ms=meal, limit=limit1)
                # md = MealandDay(day=day, meal=meal)
